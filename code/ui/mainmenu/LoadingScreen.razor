@using Sandbox;
@using Sandbox.UI;
@using System.Linq;
@using System.Threading.Tasks;
@using Sandbox.Menu;

@inherits RootPanel
@implements Sandbox.Menu.ILoadingScreenPanel
@attribute [StyleSheet]

<root style="flex-direction: column;">
	<div class="background">
		<div class="title-thumbnail">
			<img class="game-title" src="https://media.discordapp.net/attachments/440139710501748757/1139619002621116486/spleeflogo.png" />
		</div>
	</div>

	<div style="flex-grow: 1;" />

	<div class="controls" style="flex-direction: row; justify-content: center;">
		<a class="button">@(Progress.Title ?? "Loading...")</a>
	</div>
</root>

@code
{
	public LoadingProgress Progress;

	public void OnLoadingProgress(LoadingProgress progress)
	{
		Progress = progress;
		StateHasChanged();
	}
}
